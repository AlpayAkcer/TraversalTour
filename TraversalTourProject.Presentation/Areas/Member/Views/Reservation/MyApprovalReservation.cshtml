@using TraversalTourProject.EntityLayer.Concrete;
@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Onay Bekleyen Rezervasyonlarım</h1>

@if (!Model.Any())
{
    <span>Onay Bekleyen Rezervasyon bulunmamaktadır.</span>
}
else
{

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Rezervasyon Tarihi</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservationID</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@item.ReservationDate</td>
                <td>
                    @if (item.StatusID == 1)
                    {
                        <span class="btn bg-outline-success">Onay Bekliyor</span>
                    }
                </td>
            </tr>
        }
    </table>
}
