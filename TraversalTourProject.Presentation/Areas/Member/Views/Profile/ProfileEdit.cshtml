@model UserEditViewModel
@{
    ViewData["Title"] = "ProfileEdit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>ProfileEdit</h1>

<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br>
    @Html.Label("Soyadınız")
    <input type="text" asp-for="Surname" class="form-control" />
    <br>
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Email" class="form-control" />
    <br>
    @Html.Label("Cinsitey")
    <input type="text" asp-for="Gender" class="form-control" />
    <br>
    @Html.Label("Telefon Numaranız")
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br>
    @Html.Label("Hakkımda")
    <textarea type="text" asp-for="Description" class="form-control"></textarea>
    <br>
    @Html.Label("Şifreniz")
    <input type="text" asp-for="Password" class="form-control" />
    <br>
    @Html.Label("Şifre Tekrarı")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br>
    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>