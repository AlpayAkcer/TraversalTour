@using TraversalTourProject.EntityLayer.Concrete;
@model Destination

@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Tur Güncelleme</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active">Yeni Lokasyonlar</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@Model.City Güncellemesi</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <form method="post">
                    @Html.HiddenFor(x => x.DestinationID)
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Tur Adı</label>
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Kaç Gün Kaç Gece</label>
                            @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Project Description</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Kontenjan Sayısı</label>
                            @Html.TextBoxFor(x => x.Capacity, new { @class = "form-control", @type = "number" })
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Tur Ücreti</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Tur Görseli</label>
                            @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                        </div>
                        <div class="col-12">
                            <a href="#" class="btn btn-secondary">Iptal</a>
                            <input type="submit" value="Tur Güncelle" class="btn btn-success float-right">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



