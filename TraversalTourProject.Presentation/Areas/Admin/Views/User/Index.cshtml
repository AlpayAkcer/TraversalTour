@using TraversalTourProject.EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kullanıcı Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Sayfa Adı</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="30px">#</th>
                                <th width="50px">Adı Soyadı</th>
                                <th>Email Doğrulama</th>
                                <th>Telefon Doğrulama</th>
                                <th>Kullanıcı Adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int satirsayisi = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            satirsayisi++;
                                            @satirsayisi
                                        }
                                    </td>
                                    <td>
                                        @item.Name @item.Surname
                                    </td>
                                    <td>@item.PhoneNumberConfirmed</td>
                                    <td>@item.EmailConfirmed</td>
                                    <td>@item.UserName</td>
                                    <td width="350px">
                                        <a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a href="/Admin/User/EditUser/@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a href="/Admin/User/CommentUser/@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

