<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakabilirsiniz!</h4>
    <p class="mb-4">
        E-posta hesabınız yayımlanmayacak. Gerekli alanlar işaretlendi *
    </p>

    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="Name" class="form-control" placeholder="Your Name*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="DestinationID" class="form-control" placeholder="DestinationID*" required="">
            </div>
        </div>
        <div class="form-group">
            <textarea Name="Content" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="submit text-right">
            <button type="submit" class="btn btn-style btn-primary">Yorum Gönder </button>
        </div>

    </form>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>